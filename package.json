{
  "name": "wilderfeast",
  "version": "1.0.0",
  "author": "morgdalaine",
  "scripts": {
    "dev": "run-p compile:*",
    "build": "run-s compile:*",
    "compile:sass": "npx sass ./src/scss/wilderfeast.scss:wilderfeast.css --watch --no-source-map --no-charset",
    "compile:pug": "npx pug3 ./src/pug/wilderfeast.pug -w --out ./ --pretty",
    "compile:css": "npx postcss wilderfeast.css --output wilderfeast.css --use autoprefixer --verbose --no-map",
    "i18n": "i18ntool -i wilderfeast.html -a > /dev/null"
  },
  "keywords": [
    "roll20"
  ],
  "license": "MIT",
  "devDependencies": {
    "@anduh/pug-cli": "^1.0.0-alpha8",
    "autoprefixer": "^10.4.20",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "pug": "^3.0.3",
    "sass": "^1.81.0",
    "typescript": "^5.6.3"
  }
}
